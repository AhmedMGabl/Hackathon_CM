# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
# Generate a secure random string (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS - Comma-separated list of allowed origins
# For Railway, include your Railway app URL
ALLOWED_ORIGINS=https://your-app.railway.app,http://localhost:5173

# File Upload Configuration
MAX_UPLOAD_MB=200
UPLOAD_DIR=./uploads

# Google Sheets Integration (optional - provide at least one)
# Option 1: API Key (simpler, for read-only access)
SHEETS_API_KEY=your-google-api-key-here

# Option 2: Service Account JSON (for full access)
# Paste the entire JSON content as a string
SHEETS_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# OpenRouter AI Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
